<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "edu.iupui.stp.FinalProject"
        version     = "1.0.0" >

    <name>Aegis</name>

    <description>
        Aegis Appraisals Office Management Application
    </description>
	<icon src="AegisAppIcon.png" />
	<gap:splash src="logo38251.png" />
    <content src="index.php"/>
	<gap:platform name="ios"/>
	<gap:platform name="android" />


    <uses-sdk android:minSdkVersion="19"
              android:targetSdkVersion="19"
              android:maxSdkVersion="19" />

	<feature name="Camera">
		<param name="ios-package" value="CDVCamera"/>
	</feature>
	<feature name="Camera">
		<param name="android-package" value="org.apache.cordova.CameraLauncher" />
	</feature>

	<gap:plugin name="org.apache.cordova.camera" version="0.3.2"/>
	<gap:plugin name="org.apache.cordova.media" version="0.2.13"/>
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="orientation" value="portrait" />
	<gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" version="1.1.0" />
	
	
</widget>